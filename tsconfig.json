{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["apps/server/src/*"],
      "@web/*": ["apps/web/src/*"],
      "@cli/*": ["apps/cli/src/*"],
    },
    "jsx": "react"
  },
  "include": ["apps", "packages"]
}
